<div class="row table-row sm-gutters flex-nowrap" id="show-question-<%= question.id %>">
  <div class="col-sm-2"><%= question.class.name.underscore.humanize.titleize %></div>
  <div class="col-sm-4"><%= question.question %></div>
  <div class="col-sm"><%= question.answer %></div>
  <div class="col-sm"><%= question.distractor_1 %></div>
  <div class="col-sm"><%= question.distractor_2 %></div>
  <div class="col-sm-1">
    <%= link_to 'Edit', edit_quiz_question_path(question.quiz, question), remote: true %>
    <%= link_to 'Destroy', quiz_question_path(question.quiz, question), method: :delete, data: {confirm: 'Are you sure?'}, remote: true %>
  </div>
</div>